  "version": "0.2.0",
  "configurations": [
    {
      "name": "magicpkt common-voice align",
      "type": "python",
      "request": "launch",
      "module": "magic_packet.cli.magicpkt",
      "justMyCode": false,
      "args": [
          "common-voice",
          "align",
          "${workspaceFolder}/data/common_voice/cv-corpus-7.0-2021-07-21/en/clips",
          "${workspaceFolder}/data/common_voice/lexicon.txt",
          "english",
          "${workspaceFolder}/data/common_voice/cv-corpus-7.0-2021-07-21/en/alignment",
          "--verbose",
          "--clean",
          "--overwrite"
      ]
    },
    {
      "name": "uvicorn api",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "justMyCode": false,
      "args": ["--app-dir", "deploy", "api.app:app"],
      "env": {
        "CONTENT_DIR": "${workspaceRoot}/deploy/content",
        "PYTHONPATH": "${env:PYTHONPATH}:${workspaceRoot}/deploy/content/multilingual_kws/"
      }
    }
  ]
}
